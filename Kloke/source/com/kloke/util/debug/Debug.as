package com.kloke.util.debug{		import com.kloke.model.ApplicationData;
	
	import flash.external.ExternalInterface;		public class Debug	{		public function Debug()		{		}		static public function info(message:*, data:Object=null):void{		    if(ApplicationData.getInstance().debugMode){		    	trace('info: '+message)		       			    if(ApplicationData.getInstance().firebugMode){                    ExternalInterface.call("console.info",message);                }		   }		}		static public function error(message:*, data:Object=null):void{			if(ApplicationData.getInstance().debugMode){				trace('error: '+message)				if(ApplicationData.getInstance().firebugMode){                    ExternalInterface.call("console.error",message);                }			}		}				static public function log(message:*, data:Object=null):void{            if(ApplicationData.getInstance().debugMode){                trace('log: '+message)                if(ApplicationData.getInstance().firebugMode){                    ExternalInterface.call("console.log",message);                }            }        }                   static public function warn(message:*, data:Object=null):void{            if(ApplicationData.getInstance().debugMode){                trace('warning: '+message)                if(ApplicationData.getInstance().firebugMode){                    ExternalInterface.call("console.log",message);                }            }        }	}}