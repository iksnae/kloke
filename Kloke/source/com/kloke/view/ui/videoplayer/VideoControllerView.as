package com.iris.view.ui.videoplayer{	import com.iris.control.events.VideoButtonClickEvent;	import com.iris.util.debug.Debug;	import com.iris.view.ui.ButtonView;		import flash.display.Sprite;	import flash.events.MouseEvent;	public class VideoControllerView extends Sprite	{    						public function VideoControllerView()		{			Debug.log('VideoControllerView instantiated');						super();			mouseEnabled = false;			                        			init();		}		/////////////////////////////////        ////// Movie Clips: these clips are in a MovieClip        /////////////////////////////////       		public var playButton:ButtonView        public var pauseButton:ButtonView        public var stopButton:ButtonView        public var skipButton:ButtonView        public var prevButton:ButtonView        public var fullscreenButton:ButtonView        public var shareButton:ButtonView        public var volumeButton:ButtonView        public var seekBar:VideoSeekView;                private var _buttons:Array=[ playButton, pauseButton, fullscreenButton, shareButton, volumeButton ]                                private function clickHandler(e:MouseEvent):void{        //	Debug.log('clickHandler: '+ e.currentTarget.name);            var evt:VideoButtonClickEvent = new VideoButtonClickEvent()            evt.buttonName = e.currentTarget.name;            evt.videoView  = this.parent as VideoPlayerView;                        evt.dispatch()        	//dispatchEvent(new MouseEvent(MouseEvent.CLICK))        }        /**         *add click event listeners to each button          *          */                private function init():void{        	for(var i:int=0;i<_buttons.length;i++){        	//	Debug.log("add handler to "+getChildAt(i))        	  getChildAt(i).addEventListener(MouseEvent.CLICK,clickHandler) ;        	}        }			}}